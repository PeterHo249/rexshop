{{!Arguments: category_name item}}
<!-- Single Product -->

<div class="single_product">
    <div class="container">
        <div class="row">

            <!-- Images -->
            <div class="col-lg-2 order-lg-1 order-2">
                <ul class="image_list">
                    <li data-image="/images/{{item._id}}_1.jpg">
                        <img src="/images/{{item._id}}_1.jpg" alt="">
                    </li>
                    <li data-image="/images/{{item._id}}_2.jpg">
                        <img src="/images/{{item._id}}_2.jpg" alt="">
                    </li>
                    <li data-image="/images/{{item._id}}_3.jpg">
                        <img src="/images/{{item._id}}_3.jpg" alt="">
                    </li>
                </ul>
            </div>

            <!-- Selected Image -->
            <div class="col-lg-5 order-lg-2 order-1">
                <div class="image_selected">
                    <img src="/images/{{item._id}}_1.jpg" alt="">
                </div>
            </div>

            <!-- Description -->
            <div class="col-lg-5 order-3">
                <div class="product_description">
                    <div class="product_category">{{category_name}}</div>
                    <div class="product_name">{{item.name}}</div>
                    <div class="product_text">
                        <p>{{item.description}}</p>
                    </div>
                    <div class="order_info d-flex flex-row">
                        <form action="/product/cart/add" method="POST">
                            <div class="clearfix" style="z-index: 1000;">
                                <!-- Product Quantity -->
                                <div class="product_quantity clearfix">
                                    <span>Quantity: </span>
                                    <input id="quantity_input" type="text" pattern="[0-9]*" value="1" min="1" name="itemquantity">
                                    <div class="quantity_buttons">
                                        <div id="quantity_inc_button" class="quantity_inc quantity_control">
                                            <i class="fas fa-chevron-up"></i>
                                        </div>
                                        <div id="quantity_dec_button" class="quantity_dec quantity_control">
                                            <i class="fas fa-chevron-down"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="product_price">{{item.market_price}} vnd</div>
                                <input type="hidden" name="itemid" value="{{item._id}}">
                                <input type="hidden" name="itemprice" value="{{item.market_price}}">
                                <div class="button_container">
                                    <button type="submit" class="button cart_button">Add to Cart</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>