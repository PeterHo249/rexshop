
<div class="account_table">
    <div class="container">
    <div class="ribbon-front">
        <h2 style="color:#069">Account Datatable</h2>
    </div> 
    <br><br>
    <a href="/salesman/manage_account/add" class="btn btn-info">Add new account</a>
    <br><br>
        <div class="row">
             <div class="col-lg-12">
                 <div class="table-responsive">
                     <table id="mytable" class="table table-bordred table-striped">
                         <thead>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Phone Num.</th>
                            <th>Role</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Verified</th>
                            </thead>

                        <tbody>
                            {{#each items}}
                            <tr>
                                <td><a href="/admin/manage_account/{{_id}}">{{name}}</a></td>
                                <td>{{address}}</td>
                                <td>{{phone_number}}</td>
                                <td>{{role}}</td>
                                <td>{{username}}</td>
                                <td>{{email}}</td>
                                <td>{{verified}}</td>
                            </tr>

                            {{/each}}
                        </tbody>
                            
                     </table>
                 </div>
             </div>
        </div>
</div>
</div>
